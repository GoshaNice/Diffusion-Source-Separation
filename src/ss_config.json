{
  "name": "SeparateAndDiffuse",
  "n_gpu": 0,
  "preprocessing": {
      "sr": 8000
  },
  "augmentations": {
      "wave": [],
      "spectrogram": []
  },
  "arch": {
      "type": "SeparateAndDiffuse",
      "args": {}
  },
  "data": {
      "train": {
          "batch_size": 1,
          "num_workers": 5,
          "datasets": [
              {
                  "type": "LibrispeechDataset",
                  "args": {
                      "part": "train-clean-100",
                      "max_audio_length": 3.5,
                      "nfiles": 10000
                  }
              }
          ]
      },
      "val": {
          "batch_size": 1,
          "num_workers": 5,
          "datasets": [
              {
                  "type": "LibrispeechDataset",
                  "args": {
                      "part": "dev-clean",
                      "test": true,
                      "limit": 100
                  }
              }
          ]
      },
      "test-clean": {
          "batch_size": 1,
          "num_workers": 5,
          "datasets": [
              {
                  "type": "LibrispeechDataset",
                  "args": {
                      "part": "test-clean",
                      "test": true,
                      "limit": 200
                  }
              }
          ]
      }
  },
  "optimizer": {
      "type": "Adam",
      "args": {
          "lr": 0.001
      }
  },
  "loss": {
      "type": "SepDiffLoss",
      "args": {}
  },
  "metrics": [
      {
          "type": "SiSDRMetric",
          "args": {
              "name": "SiSDR"
          }
      },
      {
          "type": "PESQMetric",
          "args": {
              "name": "PESQ"
          }
      }
  ],
  "lr_scheduler": {
      "type": "ReduceLROnPlateau",
      "args": {
          "factor": 0.5,
          "mode": "max",
          "patience": 5,
          "cooldown": 15
      }
  },
  "trainer": {
      "epochs": 100,
      "save_dir": "saved/",
      "save_period": 5,
      "verbosity": 2,
      "monitor": "max val_SiSDR",
      "early_stop": 100,
      "visualize": "wandb",
      "wandb_project": "diffusion_ss_project",
      "len_epoch": 500,
      "grad_norm_clip": 10
  }
}